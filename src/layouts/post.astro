---
import '@/styles/global.css';
import Navbar from '@/components/Navbar.vue';
import Footer from '@/components/Footer.vue';
import {
    SocialShare,
    TwitterShareButton,
    FacebookShareButton,
    LinkedInShareButton,
    RedditShareButton,
    WhatsAppShareButton,
} from 'astro-social-share';

const { frontmatter } = Astro.props;
const siteUrl = Astro.site;
const postUrl = `${siteUrl}${frontmatter.link}`;
const imageUrl = frontmatter.image ? `${siteUrl}${frontmatter.image}` : `${siteUrl}/paragraph.svg`;

const SHARE_BUTTONS = [TwitterShareButton, FacebookShareButton, LinkedInShareButton, RedditShareButton, WhatsAppShareButton];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/paragraph.svg" />
		<title>{frontmatter.title || 'Blog Post'}</title>

        
        <meta property="og:type" content="article" />
        <meta property="og:url" content={postUrl} />
        <meta property="og:title" content={frontmatter.title} />
        <meta property="og:description" content={`Por Poul Lorca - ${frontmatter.tags?.join(', ')}`} />
        <meta property="og:image" content={imageUrl} />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        
        
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={postUrl} />
        <meta property="twitter:title" content={frontmatter.title} />
        <meta property="twitter:description" content={`Por Poul Lorca - ${frontmatter.tags?.join(', ')}`} />
        <meta property="twitter:image" content={imageUrl} />

		<script is:inline>            
            if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        </script>
	</head>
	<body>
        <Navbar client:load currentPath={Astro.url.pathname} />

        <section class="bg-primary text-white py-10 px-4">
            <div class="container mx-auto">
                <p class="text-sm mb-2">
                    By Poul Lorca Â· {new Date(frontmatter.date).toLocaleDateString()}
                </p>
                <h1 class="text-3xl font-bold mb-2">{frontmatter.title}</h1>
                <p class="mb-2 text-sm">
                    Tags: {frontmatter.tags && frontmatter.tags.join(', ')}
                </p>
                <p class="mb-2 text-sm">
                    Tech: {frontmatter.techStack && frontmatter.techStack.join(', ')}
                </p>

                <div class="ml-4">
                    <SocialShare
                        buttons={SHARE_BUTTONS}
                        description={`${frontmatter.title} - By Poul Lorca`}
                        title={frontmatter.title}
                        via="PoulLorca"
                    >
                        <slot name="astro-social-share-css">
                            <style is:global>
                                .astro-social-share {
                                    display: flex;
                                    gap: 8px;
                                }
                                .astro-social-share a {
                                    text-decoration: none;
                                    padding: 8px;
                                    background: rgba(255, 255, 255, 0.2);
                                    border-radius: 8px;
                                    transition: background-color 0.2s;
                                }
                                .astro-social-share a:hover {
                                    background: rgba(255, 255, 255, 0.3);
                                }
                                .astro-social-share svg {
                                    height: 20px;
                                    width: 20px;
                                }
                            </style>
                        </slot>
                    </SocialShare>
                </div>
            </div>
        </section>
		
        <main class="container mx-auto px-4 my-8 prose lg:prose-xl dark:prose-invert backdrop-blur-sm bg-white/80 dark:bg-gray-900/80 rounded-lg p-6 shadow-lg">
            <slot />

            <div class="not-prose mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold mb-4 text-foreground">Share this post!</h3>
                <SocialShare
                    buttons={SHARE_BUTTONS}
                    description={`${frontmatter.title} - Por Poul Lorca`}
                    title={frontmatter.title}
                    via="PoulLorca"
                >
                    <slot name="astro-social-share-css">
                        <style is:global>
                            .astro-social-share {
                                display: flex;
                                gap: 12px;
                                flex-wrap: wrap;
                            }
                            .astro-social-share a {
                                text-decoration: none;
                                padding: 12px 16px;
                                background: var(--primary);
                                color: white;
                                border-radius: 8px;
                                transition: opacity 0.2s;
                                display: flex;
                                align-items: center;
                                gap: 8px;
                                font-size: 14px;
                            }
                            .astro-social-share a:hover {
                                opacity: 0.9;
                            }
                            .astro-social-share svg {
                                height: 18px;
                                width: 18px;
                            }
                        </style>
                    </slot>
                </SocialShare>
            </div>
        </main> 

        <Footer />
	</body>
</html>
