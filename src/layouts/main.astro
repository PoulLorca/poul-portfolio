---
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  url?: string;
  type?: string;
}

const { 
  title, 
  description = "Software Engineer passionate about creating innovative solutions. Explore my projects, blog posts, and professional experience.",
  image = "projects/paragraph.png",
  url = Astro.url.href,
  type = "website"
} = Astro.props;

const siteTitle = title === "Home" ? "Poul Lorca - Software Engineer" : `${title} | Poul Lorca`;
const fullImageUrl = new URL(image, Astro.site).href;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/paragraph.svg" />
		
		<!-- Primary Meta -->
		<title>{title}</title>
		<meta name="title" content={siteTitle} />
        <meta name="description" content={description} />
        <meta name="author" content="Poul Lorca" />
        <meta name="keywords" content="software engineer, web developer, portfolio, vue.js, astro, projects" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={siteTitle} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={fullImageUrl} />
        <meta property="og:image:alt" content={`${title} - Poul Lorca Portfolio`} />
        <meta property="og:site_name" content="Poul Lorca Portfolio" />
        <meta property="og:locale" content="en_US" />

		<!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={url} />
        <meta property="twitter:title" content={siteTitle} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={fullImageUrl} />
        <meta property="twitter:creator" content="@poullorca" />
        
        <!-- Additional Meta Tags -->
        <meta name="robots" content="index, follow" />
        <meta name="theme-color" content="#6366f1" />
        <link rel="canonical" href={url} />

		<script is:inline>            
            if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        </script>
	</head>
	<body>
		<slot />
	</body>
</html>
