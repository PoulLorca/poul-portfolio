---
import '@/styles/global.css';
// Component Imports
import Layout from '@/layouts/main.astro';
import Navbar from '@/components/Navbar.vue';
import Footer from '@/components/Footer.vue';
import Home from '@/components/Blog/Home.vue';
import Tags from '@/components/Blog/Tags.vue';
import Posts from '@/components/Blog/Posts.vue';


const currentPathFromAstro = Astro.url.pathname;
---

<Layout title="Poul's Portfolio">
	<Navbar client:load currentPath={currentPathFromAstro} />
    <Home />
    <Tags client:load/>
    <Posts />
    <Footer />
</Layout>

